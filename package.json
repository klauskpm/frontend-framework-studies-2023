{
  "name": "frotend-framework-studies-2023",
  "version": "0.0.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*",
    "configs/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "rm:node_modules": "find . -name node_modules -type d -prune -exec rm -rf '{}' +",
    "nuke": "npm run rm:node_modules && rm package-lock.json",
    "reinstall": "npm run nuke && npm install"
  },
  "devDependencies": {
    "@config/prettier": "*",
    "@config/tailwind": "*",
    "@omlet/cli": "^1.0.1-beta.19",
    "eslint-config-custom": "*",
    "turbo": "latest"
  },
  "engines": {
    "node": ">=14.0.0"
  },
  "packageManager": "npm@8.19.3",
  "prettier": "@config/prettier"
}
